@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

}



<div class="h-100 d-flex justify-content-center align-items-center" style="flex-direction:column">
    <div class="d-flex justify-content-center align-items-center" style="flex-direction:column;padding:1rem; background-color:white; border:0.09rem solid rgb(219,219,219);border-radius:0.5rem;">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <hr class="opacity-0 m-1" />
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <hr class="opacity-0 m-1" />
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <hr class="opacity-0 m-1" />
            <div class="form-floating">
                <input asp-for="Input.ImageFile" accept="image/*" aria-required="true" />
                @*<label asp-for="Input.ImageFile" class="control-label"></label>*@
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div>
            <hr class="opacity-0 m-1" />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
