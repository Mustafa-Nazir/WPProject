@using Business.Abstract;
@using Entities.Concrete
@inject IApplicationUserService _applicationUserService;
@{
    List<ApplicationUser> users = _applicationUserService.GetAll().Data;
    
}

<div>
    <h2>Users Info</h2>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_AdminUserPartial" />
        </div>
        <div class="col-md-9">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">User Name</th>
                        <th scope="col">EMail</th>
                        <th scope="col">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ApplicationUser _user in users)
                    {
                        <tr>
                            <td>@_user.Id</td>
                            <td>@_user.UserName</td>
                            <td>@_user.Email</td>
                            <td>@_user.PhoneNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



