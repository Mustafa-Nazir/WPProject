@using Entities.Concrete
@model ApplicationUser

<div>
    <h2>Users Info</h2>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_AdminUserPartial" />
        </div>
        <div class="col-md-9">
            <form id="registerForm" method="post" enctype="multipart/form-data">
                <h2>Update User PP</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <hr class="opacity-0 m-1" />
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Update To Default</button>
            </form>
        </div>
    </div>
</div>